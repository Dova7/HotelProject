@model List<GuestReservationDTO>

<table class="table table-bordered	table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Personal Number</th>
			<th>Phone Number</th>
			<th>Reservation Date</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			@foreach (var gr in Model)
			{
				<tr>
					<td>@gr?.FirstName @gr?.LastName</td>
					<td>@gr?.PersonalNumber</td>
					<td>@gr?.PhoneNumber</td>
					<td>@gr?.CheckInDate-@gr?.CheckOutDate</td>					
					<td>
						<a class="btn btn-danger" asp-controller="Guests" asp-action="DeleteConf" asp-route-id="@gr?.Id">Delete</a>
						<a class="btn btn-info" asp-controller="Guests" asp-action="Update" asp-route-id="@gr?.Id">Update</a>
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td colspan="5">No Reservations available.</td>
			</tr>
		}
	</tbody>
</table>
<div class="row">
	<a class="btn btn-success w-25 btn btn-primary" asp-controller="Guests" asp-action="Create">Add New Reservation</a>
</div>