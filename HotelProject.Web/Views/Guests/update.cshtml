@model GuestReservationUpdateDTO
@{
    ViewData["Title"] = "Update Reservation";
}
<form asp-controller="Guests" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="FirstName">First Name</label>
        <input class="form-control" asp-for="FirstName"/>
    </div>
    <div class="mb-3">
        <label asp-for="LastName">Last Name</label>
        <input class="form-control" asp-for="LastName"/>
    </div>
    <div class="mb-3">
        <label asp-for="PersonalNumber">Personal Number</label>
        <input class="form-control" asp-for="PersonalNumber"/>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input class="form-control" asp-for="PhoneNumber"/>
    </div>
    <div class="mb-3">
        <input hidden asp-for="GuestId" />
    </div>
    <div class="mb-3">
        <input hidden asp-for="ReservationId" />
    </div>
    <div class="mb-3">
        <div class="row">
            <div class="col">
                <label asp-for="CheckInDate">Check In Date</label>
                <input class="form-control" asp-for="CheckInDate"/>
            </div>
            <div class="col">
                <label asp-for="CheckOutDate">Check Out Date</label>
                <input class="form-control" asp-for="CheckOutDate"/>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-success" value="Update" />
    </div>
</form>
<form asp-controller="Guests" asp-action="Index" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <input type="submit" class="btn " value="Cancel" />
    </div>
</form>